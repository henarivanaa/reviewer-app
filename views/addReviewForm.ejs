<%- include('partials/header') %>
<div class="container">
    <h1 class="mt-4">Add Review</h1>
    <form action="/<%= id %>/review" method="POST" class="mt-3">
        <div class="form-group">
            <label for="review_desc">Write Your Review</label>
            <textarea class="form-control" rows="3" name="review_desc" placeholder="Be Honest, You can trust us"></textarea>
        </div>
        <div class="form-group">
            <label for="rating">Example select</label>
            <select class="form-control" name="rating">
              <option selected>--Rate Here--</option>
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('partials/footer') %>